{
    "manifest_version": 2,
    "name": "Vaccination Slots Monitor",
    "description": "This app monitors vaccination slots avalability on CoWin website and is based on CoWin Open API",
    "version": "0.0.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "<all_urls>",
        "storage",
        "background",
        "notifications"
    ],
    "browser_action": {
        "default_popup": "index.html"
    }
}